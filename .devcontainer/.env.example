# User configuration
HOST_USERNAME=vscode
HOST_UID=1000
HOST_GID=1000

# Git configuration
GIT_USER_NAME="Your Name"
GIT_USER_EMAIL="your.email@example.com"

# Editor configuration
EDITOR_CHOICE=code  # Use 'code' for VS Code or 'cursor' for Cursor

# Docker configuration
DOCKER_IMAGE_NAME=ansible-git-dev
DOCKER_IMAGE_TAG=latest
DOCKER_CONTAINER_NAME=ansible-git-dev-env

# Project information
PROJECT_NAME=devcontainers-ansible
PROJECT_VERSION=0.1.0

# Docker registry settings
# DOCKER_REGISTRY=your-registry.com
# DOCKER_USERNAME=your-username
# DOCKER_BUILD_ARGS="--build-arg ARG1=value1 --build-arg ARG2=value2"

# SSH configuration
# SSH_AUTH_SOCK=/run/host-services/ssh-auth.sock  # For macOS
# SSH_AUTH_SOCK=${SSH_AUTH_SOCK}                  # For Linux

# Ansible settings
ANSIBLE_CONFIG=./ansible.cfg
# ANSIBLE_VAULT_PASSWORD_FILE=~/.ansible/vault_pass
# ANSIBLE_ROLES_PATH=./roles
# ANSIBLE_COLLECTIONS_PATH=./collections

# Git settings
GIT_PROTOCOL=ssh  # Use 'https' or 'ssh'
GIT_DEFAULT_BRANCH=main
